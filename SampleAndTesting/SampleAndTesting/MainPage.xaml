<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleAndTesting.MainPage">

    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <ScrollView VerticalOptions="Center" HorizontalOptions="Center">
            <StackLayout WidthRequest="300" >
                <Frame MinimumHeightRequest="200" CornerRadius="10" BorderColor="Black">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped" />
                    </Frame.GestureRecognizers>
                    <Label Text="Testing" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center" />
                </Frame>
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
